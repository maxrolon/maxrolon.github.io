{
  "name": "maxrolon",
  "description": "Performant scroll events with request animation frame",
  "author": "maxrolon",
  "scripts": {
    "start": "parallelshell 'npm run js' 'npm run css' 'npm run html'",
    "js": "watchify src/js/index.js -v -d -o dist/index.js",
    "css:build": "node-sass src/scss/index.scss | postcss -u autoprefixer > dist/index.css",
    "css": "onchange './src/scss/**/*.scss' -- npm run css:build",
    "html:build":"assemble",
    "html": "onchange './src/**/*.hbs' -- assemble"
  },
  "browserify": {
    "debug": true,
    "cache": {},
    "packageCache": {},
    "extension": [
      "js"
    ],
    "transform": [
      "babelify"
    ]
  },
  "devDependencies": {
    "assemble": "^0.17.1",
    "autoprefixer": "^6.3.1",
    "babel-preset-es2015": "6.6.0",
    "babelify": "^7.3.0",
    "browserify": "^12.0.1",
    "gulp-extname": "^0.2.2",
    "node-sass": "^3.7.0",
    "onchange": "^3.0.2",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0",
    "watchify": "^3.7.0"
  },
  "license": "MIT"
}
